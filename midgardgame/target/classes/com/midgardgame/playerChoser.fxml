<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox fx:id="containerPlayerChoser" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.midgardgame.PlayerChoserController">
    <GridPane styleClass="container" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints percentWidth="55"/>
            <ColumnConstraints percentWidth="45"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="0" vgrow="ALWAYS"/>
            <RowConstraints percentHeight="100" vgrow="ALWAYS"/>
        </rowConstraints>


        <HBox 
            fx:id="backBtnContainer" 
            styleClass="container"
            GridPane.rowIndex="0" 
            alignment="TOP_LEFT" 
            > 
            <Button fx:id="backHubBtn" text="HUB" onAction="#switchToHub" />
        </HBox>


        <GridPane 
            GridPane.columnIndex="0" 
            GridPane.rowIndex="1"
            styleClass="container" maxHeight="Infinity">

            <columnConstraints>
                <ColumnConstraints percentWidth="100"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="20" vgrow="ALWAYS"/>
                <RowConstraints percentHeight="80" vgrow="ALWAYS"/>
            </rowConstraints>

            <VBox
                fx:id="statPanel"
                GridPane.rowIndex="0" 
                maxWidth="Infinity" 
                maxHeight="300"
                alignment="CENTER">
            
                
                <Label text="Stat Character &#10;Carattere per andare a capo" />
            </VBox>
            <VBox
                maxWidth="Infinity" 
                maxHeight="Infinity"
                alignment="CENTER"
                GridPane.rowIndex="1">

                <ImageView 
                    fx:id="heroImageView"
                    preserveRatio="true"
                    fitHeight="600.0"> 
                    <image>
                    <Image url="@../images/HeroImage/gollum_pl.png" />
                    </image>
                </ImageView>
            </VBox>
        </GridPane>
        
        <VBox GridPane.columnIndex="1" styleClass="container" maxHeight="Infinity">
            <Label text="BANANA" />
        </VBox>
    </GridPane>
</VBox>